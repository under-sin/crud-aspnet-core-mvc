@using ContactControl.Enums;
@model UserModel
@{
    ViewData["Title"] = "Add user";
}

<div class="text-center">
    <h1 class="display-4">Add contact</h1>
</div>

<form asp-controller="User" asp-action="Insert" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Login" class="form-label"></label>
        <input type="text" asp-for="Login" class="form-control">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Password" class="form-label"></label>
        <input type="text" asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Perfil" class="form-label"></label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Select</option>
            <option value="@PerfilEnum.Admin">Admin</option>
            <option value="@PerfilEnum.Default">Default</option>
        </select>
    </div>

    <div class="col-12">
        <span asp-validation-for="Perfil" class="text-danger"></span>
        <label asp-for="Email" class="form-label"></label>
        <input type="text" asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex justify-content-end gap-1">
        <a class="btn btn-secondary" role="button" asp-controller="User" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>

</form>