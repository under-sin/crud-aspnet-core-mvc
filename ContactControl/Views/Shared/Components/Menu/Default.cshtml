@using ContactControl.Enums;
@model UserModel;

<a role="button" class="navbar-brand btn-link" asp-area="" asp-controller="Home" asp-action="Index">
    <strong class="text-primary">Hello, @Model.Name</strong>
    @*<span class="px-1">@Model.Name</span>*@
</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
        </li>
        @if (Model.Perfil == PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">User</a>
            </li>
        }
    </ul>
    <div class="d-flex align-content-center">
        <a class="btn btn-link" asp-area="" asp-controller="Login" asp-action="SignOut">SignOut</a>
    </div>
</div>