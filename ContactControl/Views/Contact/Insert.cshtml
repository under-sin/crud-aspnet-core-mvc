@model ContactModel
@{
    ViewData["Title"] = "Add contact";
}

<div class="text-center mb-4">
    <h1 class="display-4">Add contact</h1>
</div>

<form asp-controller="Contact" asp-action="Insert" class="form-mw g-3 m-auto" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <input type="text" asp-for="Name" class="form-control">
                <label for="name" asp-for="Name" class="form-label"></label>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <div class="form-outline">
                <input type="tel" asp-for="PhoneNumber" class="form-control">
                <label for="tel" asp-for="PhoneNumber" class="form-label">Phone number</label>
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-outline mb-4">
        <input type="email" asp-for="Email" class="form-control" placeholder="email@email.com">
        <label for="email" asp-for="Email" class="form-label">Email</label>
    </div>
    <!--Outra forma de mostrar a mensagem de erro-->
    @Html.ValidationMessageFor(x => x.Email)

    <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>

    <div class="text-center">
        <a role="button" asp-controller="Contact" asp-action="Index">Back homepage</a>
    </div>
</form>